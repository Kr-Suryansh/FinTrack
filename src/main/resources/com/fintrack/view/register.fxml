<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fintrack.controller.RegisterController" stylesheets="@../../../styles.css">
    <VBox alignment="CENTER" spacing="20.0" styleClass="auth-container" maxWidth="400">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
        </padding>

        <Label text="Create Account" styleClass="auth-title"/>

        <VBox spacing="10">
            <Label text="Username" />
            <TextField fx:id="usernameField" promptText="Choose a username"/>
        </VBox>

        <VBox spacing="10">
            <Label text="Password" />
            <PasswordField fx:id="passwordField" promptText="Choose a password"/>
        </VBox>
        
        <VBox spacing="10">
             <Label text="Confirm Password" />
             <PasswordField fx:id="confirmPasswordField" promptText="Confirm password"/>
        </VBox>

        <Label fx:id="errorLabel" textFill="red" visible="false"/>
        <Label fx:id="successLabel" textFill="green" visible="false"/>

        <Button text="Register" onAction="#handleRegister" styleClass="primary-button" maxWidth="Infinity"/>

        <Button text="Already have an account? Log In" onAction="#goToLogin" styleClass="link-button"/>
    </VBox>
</StackPane>
