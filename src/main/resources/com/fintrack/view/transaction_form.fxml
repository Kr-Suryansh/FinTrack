<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fintrack.controller.TransactionFormController" style="-fx-padding: 20; -fx-background-color: white;">
    <Label text="New Transaction" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <VBox spacing="5">
        <Label text="Type"/>
        <ComboBox fx:id="typeComboBox" prefWidth="300"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Amount"/>
        <TextField fx:id="amountField" promptText="0.00"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Category"/>
        <ComboBox fx:id="categoryComboBox" prefWidth="300"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Date"/>
        <DatePicker fx:id="datePicker" prefWidth="300"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Description"/>
        <TextArea fx:id="descriptionArea" prefRowCount="3" wrapText="true"/>
    </VBox>
    
    <Label fx:id="errorLabel" textFill="red" visible="false"/>

    <Button text="Save Transaction" onAction="#handleSave" styleClass="primary-button" maxWidth="Infinity"/>
</VBox>
